{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fabricResourceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Microsoft Fabric capacity resource."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the Microsoft Fabric capacity."
      }
    },
    "allowedSKU": {
      "type": "array",
      "defaultValue": ["F2"],
      "allowedValues": ["F2", "F4", "F8", "F16"],
      "metadata": {
        "description": "Array of allowed SKUs for this Microsoft Fabric capacity. Select the first item."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Fabric/capacities",
      "apiVersion": "2022-07-01-preview",
      "name": "[parameters('fabricResourceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('allowedSKU')[0]]"
      },
      "properties": {}
    }
  ],
  "variables": {},
  "outputs": {}
}